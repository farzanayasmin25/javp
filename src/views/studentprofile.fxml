<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.studentprofile">
    <VBox spacing="10" alignment="TOP_CENTER" style="-fx-padding: 20;">

        <!-- Student Information -->
        <HBox spacing="15">
            <ImageView fx:id="profileImage" fitWidth="80" fitHeight="80" />
            <VBox>
                <Label fx:id="studentName" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                <Label fx:id="studentRoll" />
                <Label fx:id="studentRegNo" />
            </VBox>
        </HBox>

        <Separator/>

        <!-- Contact Info -->
        <Label text="Contact Information" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
        <Label fx:id="mobileNumber" />
        <Label fx:id="email" />

        <Separator/>

        <!-- Advisor Info -->
        <Label text="Advisor" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
        <HBox spacing="10">
            <ImageView fx:id="advisorImage" fitWidth="40" fitHeight="40" />
            <VBox>
                <Label fx:id="advisorName" style="-fx-font-weight: bold;" />
                <Label fx:id="advisorPhone" />
            </VBox>
        </HBox>

        <Separator/>

        <!-- Personal Information -->
        <Label text="Personal Information" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
        <GridPane hgap="10" vgap="5">
            <Label text="Batch:" />
            <Label fx:id="batch" />

            <Label text="Class Section:" />
            <Label fx:id="classSection" />

            <Label text="Credit Group:" />
            <Label fx:id="creditGroup" />

            <Label text="Father's Name:" />
            <Label fx:id="fatherName" />

            <Label text="Mother's Name:" />
            <Label fx:id="motherName" />

            <Label text="Date of Birth:" />
            <Label fx:id="dob" />

            <Label text="Gender:" />
            <Label fx:id="gender" />

            <Label text="Syllabus:" />
            <Label fx:id="syllabus" />
        </GridPane>

    </VBox>
</AnchorPane>

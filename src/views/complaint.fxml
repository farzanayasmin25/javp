<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ComplaintController">
   <TextField promptText="Room Number" />
    <TextField fx:id="studentIdField" promptText="Enter Student ID" />
    <TextArea fx:id="complaintField" prefHeight="190.0" prefWidth="478.0" promptText="Write your complaint here" style="-fx-background-color: #6cbaf2; -fx-background-color: #6cbaf2;" />
   <HBox prefHeight="100.0" prefWidth="200.0">
      <children>
         <Button onAction="#submitComplaint" prefHeight="25.0" prefWidth="150.0" style="-fx-background-color: #3b25d0;" text="Submit Complaint">
            <textFill>
               <LinearGradient endX="1.0" endY="1.0">
                  <stops>
                     <Stop>
                        <color>
                           <Color red="0.9560794234275818" green="0.9586734771728516" blue="0.9605262875556946" />
                        </color>
                     </Stop>
                     <Stop offset="1.0">
                        <color>
                           <Color red="0.9777047038078308" green="0.9830348491668701" blue="0.9868420958518982" />
                        </color>
                     </Stop>
                  </stops>
               </LinearGradient>
            </textFill>
         </Button>
         <AnchorPane prefHeight="200.0" prefWidth="200.0" />
         <AnchorPane prefHeight="200.0" prefWidth="200.0">
            <children>
               <Button layoutX="47.0" layoutY="2.0" mnemonicParsing="false" onAction="#gotodashboard" prefHeight="25.0" prefWidth="112.0" style="-fx-background-color: #3b25d0;" text="Back" textFill="#fcfcfc">
                  <font>
                     <Font name="System Bold Italic" size="12.0" />
                  </font>
               </Button>
            </children>
         </AnchorPane>
      </children>
   </HBox>
</VBox>

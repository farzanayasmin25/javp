<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.managestudent" spacing="10" padding="10">
    <Label text="Student Hall Seat Requests" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    <TableView fx:id="studentTable">
        <columns>
            <TableColumn text="Admission ID" prefWidth="100">
                <cellValueFactory>
                    <PropertyValueFactory property="admissionId"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Full Name" prefWidth="150">
                <cellValueFactory>
                    <PropertyValueFactory property="fullName"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Department" prefWidth="120">
                <cellValueFactory>
                    <PropertyValueFactory property="departmentName"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Roll No" prefWidth="80">
                <cellValueFactory>
                    <PropertyValueFactory property="rollNo"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Reason for Hall Seat" prefWidth="300">
                <cellValueFactory>
                    <PropertyValueFactory property="reasonForHallSeat"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
    <HBox spacing="10">
        <Button text="Approve" onAction="#approveRequest" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Reject" onAction="#rejectRequest" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
    </HBox>
</VBox>